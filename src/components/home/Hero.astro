  linkedin: { viewBox: '0 0 24 24', path: 'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z' },
  orcid: { viewBox: '0 0 24 24', path: 'M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378a.875.875 0 110 1.75.875.875 0 010-1.75zm-.78 3.451h1.56v11.2h-1.56zm3.921 0h4.212c4.363 0 6.47 2.858 6.47 5.6 0 2.742-2.107 5.6-6.47 5.6h-4.212zm1.56 1.38v8.44h2.652c3.584 0 4.91-2.37 4.91-4.22 0-1.85-1.326-4.22-4.91-4.22z' },
  email: { viewBox: '0 0 20 16', path: 'M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884zM18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z' },
};

const activeSocials = Object.entries(config.social).filter(([_, url]) => url && url.length > 0);

function escapeHtml(str: string): string {
  return str.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;').replace(/"/g, '&quot;');
}

function isValidHref(href: string): boolean {
  return /^(https?:\/\/|mailto:|\/[^\/])/.test(href.trim());
}

function renderSimpleMarkdown(md: string): string {
  const escaped = escapeHtml(md);
  return escaped
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/\n## (.*)\n/g, '<h2 class="text-xl font-semibold mt-8 mb-3">$1</h2>')
    .replace(/\n- (.*)/g, '<li class="ml-4">$1</li>')
    .replace(/(<li[\s\S]*?<\/li>)/g, '<ul class="list-disc space-y-1 my-3">$1</ul>')
    .replace(/\[([^\]]+)\]\(([^)]+)\)/g, (_, text, href) => {
      if (!isValidHref(href)) return text;
      return `<a href="${href}" class="text-[var(--color-accent)] hover:underline">${text}</a>`;
    })
    .replace(/\n\n/g, '</p><p class="mb-4">')
    .replace(/^/, '<p class="mb-4">')
    .replace(/$/, '</p>');
}
---

<section class="animate-on-scroll">
  <div class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
    <!-- Profile photo -->
    <div class="shrink-0">
      <div class="avatar-frame">
        <img
          src={avatarSrc}
          alt={config.profile.name}
          class="w-40 h-40 md:w-48 md:h-48 rounded-lg object-cover shadow-lg"
          data-avatar-img
          onerror="this.style.display='none'"
        />
      </div>
    </div>

    <!-- Profile info -->
    <div class="flex-1">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight gradient-text">{config.profile.name}</h1>
      <p class="mt-2 text-lg text-[var(--color-text-secondary)]">
        {config.profile.position}{config.profile.affiliation ? `, ${config.profile.affiliation}` : ''}
      </p>
      <p class="text-[var(--color-text-secondary)]">{config.profile.university}</p>

      <!-- Social links -->
      <div class="mt-4 flex flex-wrap gap-2">
        {activeSocials.map(([key, url]) => (
          <a
            href={key === 'email' ? `mailto:${url}` : url}
            target={key === 'email' ? undefined : '_blank'}
            rel={key === 'email' ? undefined : 'noopener noreferrer'}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-sm text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] hover:bg-[var(--color-accent)]/10 transition-colors"
            aria-label={key.replace('_', ' ')}
          >
            <svg class="w-4 h-4" viewBox={socialIcons[key]?.viewBox || '0 0 24 24'} fill="currentColor">
              <path d={socialIcons[key]?.path || socialIcons.email.path} />
            </svg>
            <span class="capitalize">{key.replace('_', ' ')}</span>
          </a>
        ))}
      </div>

      <!-- Bio -->
      <div class="mt-6 text-[var(--color-text)] leading-relaxed max-w-2xl" set:html={renderSimpleMarkdown(extendedBio)} />
    </div>
  </div>
</section>

<script define:vars={{ avatars }}>
document.addEventListener('astro:page-load', () => {
  if (avatars.length > 1) {
    const img = document.querySelector('[data-avatar-img]');
    if (img) {
      const pick = avatars[Math.floor(Math.random() * avatars.length)];
      img.setAttribute('src', pick);
    }
  }
});
</script>
