---
import BaseLayout from '@components/layout/BaseLayout.astro';
import { getConfig } from '@lib/config';
import fs from 'node:fs';
import path from 'node:path';
import yaml from 'yaml';

const config = getConfig();
if (!config.pages.awards) return Astro.redirect('/404');

let awards: any[] = [];
try {
  const cvPath = path.resolve(process.cwd(), 'src/content/cv/cv.yml');
  const data = yaml.parse(fs.readFileSync(cvPath, 'utf-8'));
  awards = data.awards || [];
} catch {}
---

<BaseLayout title="Awards" description="Honors and awards">
  <div class="animate-on-scroll">
    <h1 class="text-3xl font-bold mb-8">Awards &amp; Honors</h1>
  </div>
  <div class="space-y-3">
    {awards.map(award => (
      <div class="flex items-start gap-4 p-4 rounded-xl hover:bg-[var(--color-card-bg)] transition-colors animate-on-scroll">
        <span class="text-sm font-mono text-[var(--color-text-secondary)] shrink-0 min-w-[3rem]">{award.year}</span>
        <div>
          <p class="font-medium">{award.title}</p>
          <p class="text-sm text-[var(--color-text-secondary)]">{award.organization}</p>
        </div>
      </div>
    ))}
  </div>
</BaseLayout>
